<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>My Watchlists</h1>
    <p>Discover and manage your favorite movie collections.</p>
  </div>
</div>

<div class="container py-5">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card h-100 watchlist-card">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text flex-grow-1"><%= list.bookmarks.count %> movies</p>
            <%= link_to "See details", list_path(list), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "Add a new list", new_list_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
